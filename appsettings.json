{
  "Jwt": {
    "Key": "ThisIsASecretKeyForJwtToken123456!",
    "Issuer": "StudentServiceAPI",
    "Audience": "StudentServiceUsers",
    "DurationInMinutes": 60
  },

  "IpRateLimitng": {
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 5
      }
      //{
      //  "Endpoint": "*:/api/values",
      //  "Period": "1m",
      //  "Limit": 10
      //}
    ],
    "RealIpHeader": "X-Real-IP", //header to use for real IP address
    "ClientIdHeader": "X-ClientId", //header to use for client identification
    "HttpStatusCode": 429, //HTTP status code to return when the limit is exceeded  (429 is Too Many Requests)
    "EnableEndpointRateLimiting": true, //each end point can have its own limit if its true
    "StackBlockedRequests": false //if true, it will stack the blocked requests and return them later
  },
  "ConnectionStrings": {
    "MyConnection": "Server=(localdb)\\MSSQLLocalDB;Database=Ef_Task_V2;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
